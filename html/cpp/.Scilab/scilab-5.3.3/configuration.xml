<Setting version="0.02">
        <!-- Scilab configuration -->
        <Profile name="scilab">
                <!-- Welcome line -->
                <WelcomeLine useCache="true" value=""/>

                <!-- GUI Part -->
                <PromptView useCache="true" value="org.scilab.modules.console.SciPromptView"/>
                <OutputView useCache="true" value="org.scilab.modules.console.SciOutputView"/>
                <LastOpenedDirectory useCache="true" value=""/>
                <InputCommandView useCache="true" value="org.scilab.modules.console.SciInputCommandView"/>
                <BackgroundColor useCache="true" value="#FFFFFF"/>
                <ForegroundColor useCache="true" value="#000000"/>
                <ScrollableUnitIncrement useCache="true" value="20"/>
                <ScrollableBlockIncrement useCache="true" value="20"/>
                <VerticalWrapAllowed useCache="true" value="false"/>
                <HorizontalWrapAllowed useCache="true" value="false"/>
                <FontName useCache="true" value="Monospaced"/>
                <FontStyle useCache="true" value="0"/> <!-- 0=PLAIN, 1=BOLD, 2=ITALIC, 3=BOLD+ITALIC -->
                <FontSize useCache="true" value="13"/>

                <MainWindowPosition useCache="true" x="0" y="0"/>
                <MainWindowSize height="480" useCache="true" width="640"/>

                <!-- Help part -->
                <HelpFontSize useCache="true" value="2"/>

                <!-- Core part -->
                <OutputViewStyledDocument useCache="true" value="javax.swing.text.DefaultStyledDocument"/>
                <InputCommandViewStyledDocument useCache="true" value="javax.swing.text.DefaultStyledDocument"/>
                <InputParsingManager useCache="true" value="org.scilab.modules.console.SciInputParsingManager"/>
                <GenericInterpreter useCache="true" value="org.scilab.modules.console.SciInterpreter"/>
                <CompletionManager useCache="true" value="org.scilab.modules.console.SciCompletionManager"/>
                <CompletionWindow useCache="true" value="org.scilab.modules.console.SciCompletionWindow"/>
                <HistoryManager useCache="true" value="org.scilab.modules.console.SciHistoryManager"/>
                <MaxOutputSize useCache="true" value="10000"/>

                <!-- Key mapping -->
                <KeyMapping>
                        <Key action="HELP" mask="" name="VK_F1"/>
                        <Key action="CLEARCONSOLE" mask="" name="VK_F2"/>
                        <Key action="CONSOLEBOX" mask="" name="VK_F12"/>
                        <Key action="VALIDATE" mask="" name="VK_ENTER"/>
                        <Key action="COMPLETION" mask="CTRL_MASK" name="VK_SPACE"/>
                        <Key action="COMPLETION" mask="" name="VK_TAB"/>
                        <Key action="PREVIOUS_HISTORY_LINE" mask="" name="VK_UP"/>
                        <Key action="NEXT_HISTORY_LINE" mask="" name="VK_DOWN"/>
                        <Key action="LINE_BEGINNING" mask="CTRL_MASK" name="VK_A"/>
                        <Key action="PREVIOUS_CHAR" mask="CTRL_MASK" name="VK_B"/>
                        <Key action="INTERRUPT_SCILAB_WORK_OR_COPY" mask="CTRL_MASK" name="VK_C"/>
                        <Key action="DEL_NEXT_CHAR" mask="CTRL_MASK" name="VK_D"/>
                        <Key action="LINE_END" mask="CTRL_MASK" name="VK_E"/>
                        <Key action="NEXT_CHAR" mask="CTRL_MASK" name="VK_F"/>
                        <Key action="DEL_PREVIOUS_CHAR" mask="CTRL_MASK" name="VK_H"/>
                        <Key action="DEL_END_OF_LINE" mask="CTRL_MASK" name="VK_K"/>
                        <Key action="NEXT_HISTORY_LINE" mask="CTRL_MASK" name="VK_N"/>
                        <Key action="PREVIOUS_HISTORY_LINE" mask="CTRL_MASK" name="VK_P"/>
                        <Key action="SELECTALL" mask="CTRL_MASK" name="VK_S"/>
                        <Key action="DEL_WHOLE_LINE" mask="CTRL_MASK" name="VK_U"/>
                        <Key action="DEL_WHOLE_LINE" mask="" name="VK_ESCAPE"/>
                        <Key action="DEL_LAST_WORD" mask="CTRL_MASK" name="VK_W"/>
                        <Key action="INTERRUPT_SCILAB_WORK_OR_CUT" mask="CTRL_MASK" name="VK_X"/>
                        <Key action="PAGEUP" mask="" name="VK_PAGE_UP"/>
                        <Key action="PAGEDOWN" mask="" name="VK_PAGE_DOWN"/>
                </KeyMapping>

                <!-- Key mapping -->
                <!--<Action name="PASTE" className="org.scilab.modules.console.PasteClipboard"/>-->
                <ActionMapping>
                        <Action className="org.scilab.modules.console.SelectAllAction" name="SELECTALL"/>
                        <Action className="org.scilab.modules.console.ClearConsoleAction" name="CLEARCONSOLE"/>
                        <Action className="org.scilab.modules.console.ConsoleboxAction" name="CONSOLEBOX"/>
                        <Action className="org.scilab.modules.console.HelpAction" name="HELP"/>
                        <Action className="org.scilab.modules.console.ValidationAction" name="VALIDATE"/>
                        <Action className="org.scilab.modules.console.CompletionAction" name="COMPLETION"/>
                        <Action className="org.scilab.modules.console.LineBeginningAction" name="LINE_BEGINNING"/>
                        <Action className="org.scilab.modules.console.GetPreviousAction" name="PREVIOUS_HISTORY_LINE"/>
                        <Action className="org.scilab.modules.console.GetNextAction" name="NEXT_HISTORY_LINE"/>
                        <Action className="org.scilab.modules.console.LineEndAction" name="LINE_END"/>
                        <Action className="org.scilab.modules.console.PreviousCharAction" name="PREVIOUS_CHAR"/>
                        <Action className="org.scilab.modules.console.NextCharAction" name="NEXT_CHAR"/>
                        <Action className="org.scilab.modules.console.DelPreviousCharAction" name="DEL_PREVIOUS_CHAR"/>
                        <Action className="org.scilab.modules.console.DelNextCharAction" name="DEL_NEXT_CHAR"/>
                        <Action className="org.scilab.modules.console.DelLastWordAction" name="DEL_LAST_WORD"/>
                        <Action className="org.scilab.modules.console.DelEndOfLineAction" name="DEL_END_OF_LINE"/>
                        <Action className="org.scilab.modules.console.DelWholeLineAction" name="DEL_WHOLE_LINE"/>
                        <Action className="org.scilab.modules.console.InterruptScilabWorkOrCut" name="INTERRUPT_SCILAB_WORK_OR_CUT"/>
                        <Action className="org.scilab.modules.console.InterruptScilabWorkOrCopy" name="INTERRUPT_SCILAB_WORK_OR_COPY"/>
                        <Action className="org.scilab.modules.console.PageUpAction" name="PAGEUP"/>
                        <Action className="org.scilab.modules.console.PageDownAction" name="PAGEDOWN"/>
                </ActionMapping>

        </Profile>

